
<% @story.blocks.sort_by{|b| b.position}.each do |block| %>
  <div id="timeline" block-title="<%= block.title %>" block-id=<%= block.position %>
    <% unless block.position == 1 %>
    class="hidden-timeline"
    <% end %>>
    <div class="event start opacity-none"></div>
    <% block.events.each do |event| %>
      <div class="interval"></div>
      <div class="event">
        <div class="event-title"><%= event.title %></div>
      </div>
    <% end %>
  <div class="interval"></div>
  <div class="event end">
    <div class="event-title">next block</div>
  </div>
  </div>
<% end %>


