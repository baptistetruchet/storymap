
<% @story.blocks.sort_by{|b| b.position}.each do |block| %>
  <div id="timeline" block-title="<%= block.title %>" block-id=<%= block.position %>
    <% unless block.position == 1 %>
    class="hidden-timeline"
    <% end %>>
    <div class="event-start opacity-none"></div>
    <% block.events.sort_by{|e| e.date}.each do |event| %>
      <div class="interval"></div>
      <div class="event" evt-id="<%= event.id %>" block-id="<%= event.block.id %>">
        <div class="event-title">
          <div><%= image_tag(event.photo_url, width: "260") %></div>
<strong><%= event.date.year %></strong> | <%= event.title %></div>
      </div>

    <% end %>
  <div class="interval"></div>
  <div class="event-end">
    <div class="event-title"><strong>Next block</strong></div>
  </div>
  </div>
<% end %>


