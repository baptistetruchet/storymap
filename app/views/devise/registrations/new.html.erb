<%- title "Create your account | StoryMap" %>
<div class="wrapper-signup">
  <div class="container text-center signup-form">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag "logo_blue.png", height: 30 %>
      <% end %>
    </div>
    <h2>Create your account</h2>
    <div class="sign-up-form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs text-left">
          <%= f.input :email, required: true, autofocus: false, label: false, placeholder: "Email",input_html: { class: 'myclass '}%>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: "Password",input_html: { class: 'myclass '} %>
          <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password confirmation",input_html: { class: 'myclass '} %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
    <div class="login">
      <p>Already have an account ? <%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>

