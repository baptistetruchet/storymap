document.querySelector('#myoverlay').remove();
<% if @event.errors.any? %>
  function openForm(formHTML) {
    const body = document.querySelector('body');
    body.insertAdjacentHTML('beforeend', formHTML);
  }

  openForm('<%= j render "shared/edit_event_form", block: @block, event: @event %>');

  document.querySelector('.closebtn').addEventListener('click', function(){
    document.querySelector('#myoverlay').remove();
  });
<% else %>
  document.querySelector('#event-<%= @event.id %> span').innerHTML = '<%= @event.title %>';

  function displayEvent(eventHTML) {
    const eventDiv = document.getElementById('info-div');
    eventDiv.innerHTML = eventHTML;
  }
  location.reload();
  displayEvent('<%= j render "show_event", event: @event %>');
<% end %>
