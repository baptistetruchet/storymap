<li class="block-item" id="block-<%=block.id%>">

  <button class="collapse btn-unstyled btn-flex" type="button" data-toggle="collapse" data-target="#collapse-<%=block.id%>" aria-expanded="false" aria-controls="collapseExample">
    <span>
      <i class="fas fa-ellipsis-v"></i>
      <span><%= block.title %></span>
      <%= link_to "Edit", edit_block_path(block), class: 'link-green', remote: true %>
      <%= link_to "Delete", block_path(block), method: :delete, data: { confirm: "Are you sure?"}, class: 'link-red', remote: true %>
    </span>
    <i class="fas fa-chevron-down"></i>
  </button>

  <% if block.events %>
    <div class="collapse" id="collapse-<%=block.id%>">
      <ul class="events-list list-unstyled">
        <% block.events.each do |event| %>
          <%= render 'event', event: event %>
        <% end %>
      </ul>
      <div class="add-event-div">
        <%= link_to new_block_event_path(block), remote: true do %>
          <i class="fas fa-plus"></i>
          <span>Add Event</span>
        <% end %>
      </div>
    </div>
  <% end %>

</li>









