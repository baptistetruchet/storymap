<div class="edit-page">
  <div
    id="map"
    data-markers="<%= @all_markers.to_json %>" >
  </div>
  <div class="story-edit-div">
    <%= link_to edit_story_details_path(@story), remote: true do %>
      <h4 id="story-title" class="text-center"><%= @story.title %></h4>
    <% end %><hr>

    <div class="full-list">
      <ul id="blocks-list">
        <% @blocks.sort_by{|b| b.position}.each do |block| %>
          <%= render 'block', block: block %>
        <% end %>
      </ul>
      <%= link_to "Add a block", new_story_block_path(@story), remote: true, class: 'btn-storymap btn-storymap-blue text-center'  %>
      <hr>
    </div>
  </div>
</div>
