<div class="edit-page">
  <div
    id="map"
    data-markers="<%= @markers.to_json %>" >
  </div>
  <div class="story-edit-div">
    <h4 class="text-center"><%= @story.title %>
    <%= link_to edit_story_details_path(@story) do %>
      <i class="fas fa-edit" style="font-size:1em;"aria-hidden="true"></i>
    <% end %></h4><hr>

    <div class="full-list">
      <div id="blocks-list">
        <% @blocks.each do |block| %>
          <%= render 'block_list', block: block %>
          <% if block.events %>
            <%= render 'event_list', block: block %>
          <% end %>
        <% end %>
      </div>
      <%= button_to "Add a block", new_story_block_path(@story),
          :class => "btn btn-primary", :method => :get %>
        <hr>
    </div>
  </div>
</div>
